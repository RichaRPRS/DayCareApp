<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ParLeaveActivity"
    android:focusableInTouchMode="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/button2">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/linear1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:text="Leave Duration"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:entries="@array/array_leave" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/relativenew1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linear1"
                android:layout_marginTop="15dp">

                <LinearLayout
                    android:id="@+id/layout1ws"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_toStartOf="@+id/imageView2"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/textView4ws"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="From Date"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/textViewmtime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:text="Today"
                        android:textAlignment="viewEnd"
                        android:textColor="@color/black"
                        android:textSize="18sp" />


                </LinearLayout>

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/ic_action_edit" />

                <LinearLayout
                    android:id="@+id/Linearcolor2"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_below="@+id/imageView2"
                    android:layout_marginTop="15dp"
                    android:background="@color/Gray"
                    android:orientation="vertical" />

                <LinearLayout
                    android:id="@+id/layout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/Linearcolor2"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_toStartOf="@+id/imageView22"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="To Date"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/textViewmtimes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="10dp"
                        android:text="Tomorrow"
                        android:textAlignment="viewEnd"
                        android:textColor="@color/black"
                        android:textSize="18sp" />


                </LinearLayout>

                <ImageView
                    android:id="@+id/imageView22"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/Linearcolor2"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/ic_action_edit" />

                <!--<LinearLayout
                    android:id="@+id/Linearcolor3"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_below="@+id/imageView22"
                    android:layout_marginTop="15dp"
                    android:background="@color/Gray"
                    android:orientation="vertical" />-->

                <!--<TextView
                    android:id="@+id/textVndays"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/Linearcolor3"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="15dp"
                    android:text="No of days"
                    android:textColor="@color/black"
                    android:textSize="18sp" />-->

               <!-- <LinearLayout
                    android:id="@+id/Linearcolor4"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_below="@+id/textVndays"
                    android:layout_marginTop="15dp"
                    android:background="@color/Gray"
                    android:orientation="vertical" />-->


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativenew2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relativenew1"
                android:layout_marginTop="15dp">

                <LinearLayout
                    android:id="@+id/layoutws"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_toStartOf="@+id/imageView"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/textViewws"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Date "
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/textVietime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:text="Today"
                        android:textAlignment="viewEnd"
                        android:textColor="@color/black"
                        android:textSize="18sp" />


                </LinearLayout>

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/ic_action_edit" />


            </RelativeLayout>

            <LinearLayout
                android:id="@+id/Linearcolor5"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_below="@+id/relativenew2"
                android:layout_marginTop="15dp"
                android:background="@color/Gray"
                android:orientation="vertical" />

            <RelativeLayout
                android:id="@+id/relativenew3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Linearcolor5">

                <LinearLayout
                    android:id="@+id/linear11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView51"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:text="Session"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <Spinner
                        android:id="@+id/spinner2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:entries="@array/array_leavesess" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/Linearcolor6"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_below="@+id/linear11"
                    android:layout_marginTop="15dp"
                    android:background="@color/Gray"
                    android:orientation="vertical" />

            </RelativeLayout>


            <LinearLayout
                android:id="@+id/thbtnlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relativenew3"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button10"
                    android:layout_width="match_parent"
                    android:layout_height="40sp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/my_butfull"
                    android:text="Sick" />

                <Button
                    android:id="@+id/button11"
                    android:layout_width="match_parent"
                    android:layout_height="40sp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/my_buttonblue"
                    android:text="Fever" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/thbtnlayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/thbtnlayout"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button12"
                    android:layout_width="match_parent"
                    android:layout_height="40sp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/my_buttonblue"
                    android:text="Family Emergency" />

                <Button
                    android:id="@+id/button13"
                    android:layout_width="match_parent"
                    android:layout_height="40sp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/my_buttonblue"
                    android:text="Others" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/Linearcolor7"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_below="@+id/thbtnlayout1"
                android:layout_marginTop="15dp"
                android:background="@color/Gray"
                android:orientation="vertical" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/Linearcolor7"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:text="Notes "
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/textView18"
                android:layout_marginLeft="10dp"
                android:layout_toEndOf="@+id/textView18"
                android:text="500"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/editText4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/imageView4"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:background="@android:color/transparent"
                android:ems="10"
                android:hint="Optional Notes"
                android:inputType="textMultiLine" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/textView18"
                android:layout_marginRight="15dp"
                app:srcCompat="@drawable/ic_action_camera" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/editText4"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="15dp"
                app:srcCompat="@drawable/bdge_white" />

        </RelativeLayout>

    </ScrollView>


    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/my_button"
        android:text="Apply leave"
        android:textColor="@color/Chocolate"
        android:textSize="18sp"
        android:textStyle="bold" />

</RelativeLayout>